@model Eticaret.MvcWebUI.Models.ShippingDetails
@{
    ViewBag.Title = "Checkout";
}
<style>
    .validation-summary-errors{color:red;}
    .field-validation-error{color:red;}
    .input-validation-error{border:1px solid red;background-color:#fee;}
</style>
<div class="container pt-5 ">
    <h2>Sipariş Bilgileri</h2>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <div class="form-group row ">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Kullanıcı Adı</label>
            <div class="col-sm-6">
               
                @User.Identity.Name
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Adres Başlığı</label>
            <div class="col-sm-6">
                @Html.TextBoxFor(x => x.AdresBasligi, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Adres</label>
            <div class="col-sm-6">
                @Html.TextBoxFor(x => x.Adres, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Şehir</label>
            <div class="col-sm-6">
                @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Semt</label>
            <div class="col-sm-6">
                @Html.TextBoxFor(x => x.Semt, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Mahalle</label>
            <div class="col-sm-6">
                @Html.TextBoxFor(x => x.Mahalle, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Posta Kodu</label>
            <div class="col-sm-6">
                @Html.TextBoxFor(x => x.PostaKodu, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2"> </div>
            <div class="col-sm-6">
                <input type="submit" class="btn btn-primary" value="Şipariş Ver" />
            </div>
        </div>
    }
</div>

<!--Jquery validation ekledik-->
<!--Server'a gitmeden validation sağlıyor-->
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
