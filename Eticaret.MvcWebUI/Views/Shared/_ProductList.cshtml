@using Eticaret.MvcWebUI.Models;
@model IEnumerable<ProductModel>
    <div class="row">
        @foreach (var urun in Model)
        {
            <div class="col-md-4 mb-2 ">

                <div class="card h-100">

                    <div>
                        <img src="~/Upload/@urun.Image" class="card-img-top mw-100" alt="@urun.Name">
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">
                            @Html.ActionLink(urun.Name, "Details", new { id = urun.Id })
                        </h4>
                        <p class="card-text pt-2 description">
                            @urun.Description
                        </p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted product-price"><i class="fas fa-lira-sign"></i>  @urun.Price </small>
                        <a href="/Home/Details/@urun.Id" class="btn btn-default btn-sm float-right">Ürünü İncele  <i class='fas fa-angle-double-right'></i> </a>
                    </div>
                </div>

            </div>
        }
    </div>